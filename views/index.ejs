<%- include ('partials/header') %>
<%- include ('partials/homenavbar') %>
<body>
	<div class="container mt-4">

		<div class="jumbotron">
			<h1 class="display-4">Bem-vindo!</h1>
			<p class="lead">
				Este é um simples blog feito por Theryston!
			</p>
			<hr class="my-4">
		</div>

		<hr>
		<% articles.forEach((article) => {
			%>
			<div class="card">
				<div class="card-header">
					<%= article.title %>
				</div>
				<div class="card-body">
					<a href="/<%= article.slug %>" class="btn btn-primary">Ler artigo</a>
				</div>
			</div>
			<br>
			<%
		}) %>
		<div class="row">
			<div class="col col-12">
				<a style="float:right;" href="/articles/page/2">Proxima página >></a>
			</div>
			<hr>
		</div>
	</div>
</body>
<%- include ('partials/footer') %>