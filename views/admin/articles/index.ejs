<%- include ('../../partials/header') %>
<%- include ('../../partials/navbar') %>
<body>
	<div class="container">
		<hr>
		<h2>Artigos</h2><br>
		<a href="/admin/articles/new" class="btn btn-primary">Criar novo artigo!</a>
		<hr>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>ID</th>
					<th>Título</th>
					<th>Slug</th>
					<th>Categoria</th>
					<th>Ações</th>
				</tr>
			</thead>
			<tbody>
				<% articles.forEach((article) => { %>
					<tr>
						<td><%=article.id%></td>
						<td><%=article.title%></td>
						<td><%=article.slug%></td>
						<td><%=article.category.title%></td>
						<td>
							<form method="post" action="/articles/delete" style="display:inline;" onsubmit="confirmDelect(event, this)">
								<input type="hidden" name="id" value="<%=article.id%>">
								<button class="btn btn-danger">Deletar</button>
							</form>
						</td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
	<script>
		function confirmDelect(event, form) {
			event.preventDefault();
			var userdelet = confirm('Você quer deletar este artigo?')
			if (userdelet) {
				form.submit()
			} 
		}
	</script>
</body>
<%- include ('../../partials/footer') %>